<% include ../partials/header %>

<div class="container">
            <div class="row">
                       <h1 style="text-align: center">Edit <%= campground.name %></h1>
                        <div style="width: 43%; margin: 25px auto;">
                                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                                            <div class="form-group">
                                                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                                            </div>
                                            <div class="form-group">
                                                    <input class="form-control" type="text" name="campground[image1]" value="<%=  campground.image1 %>">
                                            </div>
                                            <div class="form-group">
                                                    <input class="form-control" type="text" name="campground[image2]" value="<%=  campground.image2 %>">
                                            </div>
                                            <div class="form-group">
                                                    <input class="form-control" type="text" name="campground[image3]" value="<%=  campground.image3 %>">
                                            </div>
                                            <div class="form-group">
                                                    <input class="form-control" type="text" name="campground[image4]" value="<%=  campground.image4 %>">
                                            </div>
                                            <div class="form-group">
                                                    <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
                                            </div>
                                            <div class="form-group">
                                                    <select class="selectpicker form-control" name="campground[category]">
                                                          <option value="Mountain">Mountain</option>
                                                          <option>Adventureous</option>
                                                          <option>Religious</option>
                                                          <option>Historic</option>
                                                          <option>Haunted</option>
                                                    </select>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inline">
                                                        <div class="form-group">
                                                              <input type="number" class="form-control" placeholder="Enter number" name="campground[days]" value="<%=  campground.days %>"> Days
                                                        </div> &nbsp &nbsp
                                                        <div class="form-group">
                                                              <input type="number" class="form-control" placeholder="Enter number" name="campground[nights]" value="<%=  campground.nights %>"> Nights
                                                        </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                    <button class="btn btn-lg btn-primary btn-block">Update Now!</button>
                                            </div>
                                    </form>
                                    <a href="/campgrounds">Go Back</a>
                        </div>
            </div>
</div>

<% include ../partials/footer %>

